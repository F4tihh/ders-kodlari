using UnityEngine;
using TMPro; // Score için

[RequireComponent(typeof(Animator))]
public class PlayerController : MonoBehaviour
{
    [Header("Hareket")]
    public float moveSpeed = 4f;

    [Header("UI")]
    public TextMeshProUGUI scoreText;

    private Animator anim;
    private int score = 0;

    void Awake()
    {
        anim = GetComponent<Animator>();
    }

    void Start()
    {
        // Sahne başında UI'ı güncelle
        if (scoreText) scoreText.text = "Score: " + score;
    }

    void Update()
    {
        // --- YÜRÜME ---
        // WASD / ok tuşları
        float h = Input.GetAxisRaw("Horizontal");
        float v = Input.GetAxisRaw("Vertical");
        Vector3 dir = new Vector3(h, 0f, v).normalized;

        bool walking = dir.sqrMagnitude > 0.01f;
        anim.SetBool("isWalking", walking);

        if (walking)
        {
            // Karakteri yöne döndür ve ilerlet
            transform.forward = dir;
            transform.position += dir * moveSpeed * Time.deltaTime;
        }

        // --- SALDIRI ---
        if (Input.GetKeyDown(KeyCode.Space))
        {
            anim.SetTrigger("Attack"); // Animator'da Trigger parametresi "Attack" olmalı
        }
    }

    // --- COIN TOPLAMA ---
    void OnTriggerEnter(Collider other)
    {
        if (other.CompareTag("Coin"))
        {
            Destroy(other.gameObject); // Coin'i yok et
            score++;
            if (scoreText) scoreText.text = "Score: " + score;
            Debug.Log("Coin toplandı! Toplam: " + score);
        }
    }
}
