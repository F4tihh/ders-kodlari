import tkinter as tk
import random

# ------------------------------
# 1. PENCERE OLUÅTURMA
# ------------------------------
pencere = tk.Tk()
pencere.title("TaÅŸ KaÄŸÄ±t Makas Oyunu")
pencere.geometry("600x400")  # geniÅŸlik x yÃ¼kseklik

# ------------------------------
# 2. RESÄ°MLERÄ° YÃœKLEME
# ------------------------------
# Bu resimler .py dosyasÄ± ile aynÄ± klasÃ¶rde olmalÄ±
tas_resim = tk.PhotoImage(file="tas.png")
kagit_resim = tk.PhotoImage(file="kagit.png")
makas_resim = tk.PhotoImage(file="makas.png")

# SeÃ§enekleri ve resimleri eÅŸleÅŸtirelim
resimler = {
    "tas": tas_resim,
    "kagit": kagit_resim,
    "makas": makas_resim
}

secenekler = ["tas", "kagit", "makas"]

# ------------------------------
# 3. ÃœST KISIM: BAÅLIK VE BÄ°LGÄ°
# ------------------------------
baslik_label = tk.Label(pencere, text="TaÅŸ - KaÄŸÄ±t - Makas", font=("Arial", 20, "bold"))
baslik_label.pack(pady=10)

bilgi_label = tk.Label(
    pencere,
    text="Bir seÃ§im yap: TaÅŸ, KaÄŸÄ±t veya Makas",
    font=("Arial", 12)
)
bilgi_label.pack()

# ------------------------------
# 4. ORTA KISIM: OYUNCU & BÄ°LGÄ°SAYAR RESÄ°MLERÄ°
# ------------------------------
orta_frame = tk.Frame(pencere)
orta_frame.pack(pady=10)
 
# ****** skor tablosu eklenecek 
#  
oyuncu_frame = tk.Frame(orta_frame)
oyuncu_frame.pack(side="left", padx=20)

bilgisayar_frame = tk.Frame(orta_frame)
bilgisayar_frame.pack(side="right", padx=20)

oyuncu_label_baslik = tk.Label(oyuncu_frame, text="Sen", font=("Arial", 14, "bold"))
oyuncu_label_baslik.pack()

oyuncu_resim_label = tk.Label(oyuncu_frame, image=None)
oyuncu_resim_label.pack(pady=5)

bilgisayar_label_baslik = tk.Label(bilgisayar_frame, text="Bilgisayar", font=("Arial", 14, "bold"))
bilgisayar_label_baslik.pack()

bilgisayar_resim_label = tk.Label(bilgisayar_frame, image=None)
bilgisayar_resim_label.pack(pady=5)

# ------------------------------
# 5. SONUÃ‡ YAZISI
# ------------------------------
sonuc_label = tk.Label(pencere, text="", font=("Arial", 16, "bold"))
sonuc_label.pack(pady=10)

# ------------------------------
# 6. OYUN MANTIÄI
# ------------------------------
def kazanan_bul(oyuncu, bilgisayar):
    if oyuncu == bilgisayar:
        return "Berabere ğŸ¤"

    if (
        (oyuncu == "tas" and bilgisayar == "makas") or
        (oyuncu == "makas" and bilgisayar == "kagit") or
        (oyuncu == "kagit" and bilgisayar == "tas")
    ):
        return "KazandÄ±n ğŸ‰"
    else:
        return "Kaybettin ğŸ˜¢"
    

#  skor 5 olan kazanÄ±r ekle , sonra oyun kapansÄ±n !!! 

def oynat(oyuncu_secimi):
    # Oyuncu resmini gÃ¼ncelle
    oyuncu_resim_label.config(image=resimler[oyuncu_secimi])

    # Bilgisayar rastgele seÃ§im yapsÄ±n
    bilgisayar_secimi = random.choice(secenekler)
    bilgisayar_resim_label.config(image=resimler[bilgisayar_secimi])

    # Sonucu bul
    sonuc_metni = kazanan_bul(oyuncu_secimi, bilgisayar_secimi)
    sonuc_label.config(text=f"Sen: {oyuncu_secimi}  |  Bilgisayar: {bilgisayar_secimi}\n{sonuc_metni}")

# ------------------------------
# 7. ALT KISIM: BUTONLAR
# ------------------------------
buton_frame = tk.Frame(pencere)
buton_frame.pack(pady=15)

tas_buton = tk.Button(buton_frame, text="TaÅŸ", width=10, command=lambda: oynat("tas"))
tas_buton.grid(row=0, column=0, padx=5)

kagit_buton = tk.Button(buton_frame, text="KaÄŸÄ±t", width=10, command=lambda: oynat("kagit"))
kagit_buton.grid(row=0, column=1, padx=5)

makas_buton = tk.Button(buton_frame, text="Makas", width=10, command=lambda: oynat("makas"))
makas_buton.grid(row=0, column=2, padx=5)

# ------------------------------
# 8. PENCEREYÄ° Ã‡ALIÅTIR
# ------------------------------
pencere.mainloop()
